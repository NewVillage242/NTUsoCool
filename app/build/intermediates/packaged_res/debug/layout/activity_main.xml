<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                       
                                                   
    
                 
                            
                                                             
           

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity" android:tag="layout/activity_main_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <com.arcgismaps.mapping.view.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="72dp"
            android:text="@string/text1"
            android:textColor="@color/black"
            />
        <ToggleButton
            android:id="@+id/btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="22dp"
            android:width="95dp"
            android:checked="false"
            app:srcCompat="@android:drawable/ic_input_add" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="122dp"
            android:layout_marginBottom="72dp"
            android:text="@string/text2"
            android:textColor="@color/black"
            />
        <ToggleButton
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="122dp"
            android:layout_marginBottom="22dp"
            android:text="button"
            android:width="95dp"

            app:srcCompat="@android:drawable/ic_input_add" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="224dp"
            android:layout_marginBottom="72dp"
            android:text="@string/text3"
            android:textColor="@color/black"
            />
        <ToggleButton
            android:id="@+id/btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="224dp"
            android:layout_marginBottom="22dp"
            android:text="b"
            android:width="95dp"

            app:srcCompat="@android:drawable/ic_input_add" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="22dp"

            app:srcCompat="@android:drawable/ic_menu_mylocation" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
         
